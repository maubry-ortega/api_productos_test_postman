					"script": {
						"exec": [
							"pm.test(\"Código de estado es 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Respuesta contiene un array\", function () {",
							"    const json_data = pm.response.json();",
							"    pm.expect(json_data).to.be.an(\"array\");",
							"});",
							"",
							"pm.test(\"Respuesta objeto de array contiene un campo codigo\", function () {",
							"    const json_data = pm.response.json();",
							"    const primer_producto = json_data[0]",
							"    pm.expect(primer_producto).to.have.property(\"codigo\");",
							"});",
							"",
							"const response_data = pm.response.json();",
							"const product_count = response_data.length;",
							"pm.collectionVariables.set(\"CANTIDAD_PRODUCTOS\", product_count);",
							"",
							"console.log(`actualizado correctamente CANTIDAD_PRODUCTOS = ${product_count}`);"
