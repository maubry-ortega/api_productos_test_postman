					"script": {
						"exec": [
							"pm.test(\"producto eliminado\", function () {",
							"    var json_data = pm.response.json();",
							"    pm.expect(json_data.mensaje).to.eql(\"Producto eliminado\");",
							"});",
							"",
							"pm.test(\"producto eliminado correctamente\", function () {",
							"    var json_data = pm.response.json();",
							"    ",
							"    if (json_data.mensaje === \"Producto eliminado\") {",
							"        var current_count = pm.collectionVariables.get(\"CANTIDAD_PRODUCTOS\");",
							"        ",
							"        var new_count = parseInt(current_count || 0) - 1;",
							"        ",
							"        if (new_count < 0) {",
							"            new_count = 0;",
							"        }",
							"        ",
							"        pm.collectionVariables.set(\"CANTIDAD_PRODUCTOS\", new_count.toString());",
							"        ",
							"        console.log(\"productos actuales \" + current_count + \" nuevos: \" + new_count);",
							"    }",
