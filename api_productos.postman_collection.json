		{
			"name": "agregar_producto",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Código de estado es 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"Respuesta contiene un number\", function () {",
							"    const json_data = pm.response.json();",
							"    pm.expect(json_data.precio).to.be.a(\"number\");",
							"});",
							"",
							"if (pm.response.code === 201) {",
							"    let cantidad_actual = pm.collectionVariables.get(\"CANTIDAD_PRODUCTOS\");",
							"    ",
							"    if (!cantidad_actual || isNaN(cantidad_actual)) {",
							"        cantidad_actual = 0;",
							"    } else {",
							"        cantidad_actual = parseInt(cantidad_actual);",
							"    }",
							"",
							"    cantidad_actual += 1;",
							"",
							"    pm.collectionVariables.set(\"CANTIDAD_PRODUCTOS\", cantidad_actual);",
							"    ",
							"    console.log(`Producto agregado exitosamente. Total: ${cantidad_actual}`);",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
